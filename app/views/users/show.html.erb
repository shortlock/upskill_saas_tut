<div class="container mt-100">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.profile.avatar.url(:medium) %><br>
      <hr>
      <%= "Member since #{@date}" %>
    </div>
      <div class="col-md-6">
        <h1><%= @user.profile.first_name %>
        <%= " #{@user.profile.last_name}" %></h1><br>
        <h3><%= @user.profile.job_title %></h3><br>
        <hr>
        <% if current_user.plan_id == 2 %>
        <i class="fa fa-envelope" aria-hidden="true">&nbsp&nbsp&nbsp</i>
        <%= @user.profile.contact_email %><br>
        <br>
        <i class="fa fa-phone" aria-hidden="true">&nbsp&nbsp&nbsp</i>
        <%= @user.profile.phone_number %><br>
        <% end %>
        <hr>
        <%= @user.profile.description %><br>
      </div>
  </div>
</div>