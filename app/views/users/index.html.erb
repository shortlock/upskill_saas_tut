<% @profile.each do |p| %>
  <div class="container mt-5 shdw">
    <div class="we1ll">
      <div class="row">
        <div class="col-md-3">
          <%= image_tag p.avatar.url(:medium) %><br>
          <hr>
          <%= "Member since  #{@user.find(@profile.find(p.id).user_id).created_at.strftime("%B %d, %Y ")}" %>
        </div>
          <div class="col-md-6">
            <h1><%= p.first_name %>
            <%= " #{p.last_name}" %></h1><br>
            <h3><span><%= job_title_icon_index(p.job_title) %>&nbsp</span><%= p.job_title %></h3><br>
            <hr>
            <h3><u>Contact Info</u></h3><br>
            <% if current_user.plan_id == 2 %>
              <i class="fa fa-envelope fa-lg" aria-hidden="true">&nbsp&nbsp&nbsp</i>
              <%= p.contact_email %><br>
              <br>
              <i class="fa fa-phone fa-lg" aria-hidden="true">&nbsp&nbsp&nbsp</i>
              <%= p.phone_number %><br>
            <% else %>
              <p class="help-block">Become a pro member to see contact details.</p>
            <% end %>
            <hr>
            <h3><u>Description</u></h3>
            <%= p.description %><br>
          </div>
      </div>
    </div>
  </div>
<% end %>