<div class="container">
  <h3 class="text-center">Contact Us</h3>
  <form class="form-horizontal">
    <div class="form-group">      
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group">      
        <label class="col-sm-2 control-label">Email Address</label>
        <div class="col-sm-4">
            <input type="text" class="form-control col-sm-3" placeholder="Email">
        </div>
    </div>
    <div class="form-group">      
            <label class="col-sm-2 control-label">Comments</label>
            <div class="col-sm-4">
              <textarea class="form-control"></textarea>
            </div>      
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
  </form>
</div>

<div class="container">
  <h3 class="text-center">Contact Us</h3>
  <%= form_for "/contacts",  html: {class: "form-horizontal"}  do |f| %>
    <div class="form-group">
      <%= f.label :name,class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email,class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
     <div class="form-group">
      <%= f.label :comments,class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_area :comments, class: "form-control", placeholder: "Message ..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>