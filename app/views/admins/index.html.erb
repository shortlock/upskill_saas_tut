<div class="container-fluid text-center">
  <h3>Profiles Table</h3>
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Email address</th>
      <th class="text-center">Phone Number</th>
      <th class="text-center">User Id</th>
      <th class="text-center">Profile Id</th>
      <th class="text-center">Description</th>
      <th class="text-center">Avatar</th>
      <th class="text-center">Actions</th>
    </tr>
    <tbody>
      <% @profile.each do |p| %>
        <tr>
          <td><%= p.first_name %> <%= " #{p.last_name}" %></td>
          <td><%= p.contact_email %></td>
          <td><%= p.phone_number %></td>
          <td><%= p.user_id %></td>
          <td><%= p.id %></td>
          <td><%= p.description.lines.first %></td>
          <td><%= image_tag p.avatar.url(:thumb), class: "img-responsive thumb-img" %></td>
          <td><!-- Single button -->
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action <span class="caret"></span>
                <span class="sr-only"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to "Edit", edit_user_profile_path(p.id) %></li>
                <li><%= link_to "Destroy", admin_destroy_profile_path(p), data: { confirm: "Are you sure?" }, method: :delete %></li>
                <li><a href="#">Something else here</a></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "See Profile", user_path(p.id) %></a></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>  
  <h3>Users Table</h3>
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th class="text-center">User Id</th>
      <th class="text-center">Email</th>
      <th class="text-center">Plan</th>
      <th class="text-center">Created</th>
      <th class="text-center">Last Signed in</th>
      <th class="text-center">Actions</th>
    </tr>
    <tbody>
      <% @user.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.email %></td>
          <td>
            <% if p.plan_id == 2 %>
              <span class="label label-danger">Pro</span>
            <% else %>
              <span class="label label-info">Basic</span>
            <% end %>
          </td>
          <td><%= p.created_at %></td>
          <td><%= p.last_sign_in_at %></td>
          <td><!-- Single button -->
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action <span class="caret"></span>
                <span class="sr-only"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="#">Edit</a></li>
                <li><%= link_to "Destroy", admin_destroy_user_path(p), method: :delete, data: { confirm: "You sure?" } %></li>
                <li><a href="#">Reset Password</a></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "See Profile", user_path(p.id) %></a></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <h3>Contacts Form Table</h3>
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th class="text-center">Id</th>
      <th class="text-center">Email</th>
      <th class="text-center">Message</th>
      <th class="text-center">Created at</th>
      <th class="text-center">Status(need to add into DB)</th>
      <th class="text-center">Actions</th>
    </tr>
    <tbody>
      <% @contact.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.email %></td>
          <td><%= p.comments %></td>
          <td><%= p.created_at %></td>
          <td></td>
          <td><!-- Single button -->
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action <span class="caret"></span>
                <span class="sr-only"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="#">Edit</a></li>
                <li><%= link_to "Destroy", admin_destroy_contact_path(p), method: :delete, data: { confirm: "You sure?" } %></li>
                <li><a href="#">Reset Password</a></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
</div>