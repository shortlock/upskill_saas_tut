<%= form_for @profile, url: user_profile_path, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 text-center" %>
    <!--<%= f.label :last_name, class: "col-sm-5 text-center" %>-->
    <div class="col-sm-5">
      <%= f.text_field :first_name, class: "form-control", placeholder: "First Name"%>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :job_title, class: "col-sm-2 text-center" %>
    <div class="col-sm-3">
      <%= f.select :job_title,['Developer','Entrepeneur','Investor'], {} , class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_no, class: "col-sm-2 text-center" %>
    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-earphone" aria-hidden="true"></i></span>
        <%= f.text_field :phone_number, class: "form-control"%>
      </div>  
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_email, class: "col-sm-2 text-center" %>
    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon2">@</span>
        <%= f.text_field :contact_email, class: "form-control"%>
      </div>  
    </div>
  </div>  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 text-center" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">  
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Update Profile", class: "btn btn-primary" %>
    </div>  
  </div>
<% end %>