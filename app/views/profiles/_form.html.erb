<%= form_for @profile, url: user_profile_path, html: {class: "form-horizontal", :multipart => true} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 text-center" %>
    <div class="col-md-10">
      <%= f.text_field :first_name, class: "form-control", placeholder: "First Name"%>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 text-center" %>
    <div class="col-md-10">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar, class: "col-md-2 text-center" %>
    <div class="col-md-3">
      <%= f.file_field :avatar, type: "file"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :job_title, class: "col-md-2 text-center" %>
    <div class="col-md-3">
      <%= f.select :job_title,['Developer','Entrepeneur','Investor'], {} , class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_no, class: "col-md-2 text-center" %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-earphone" aria-hidden="true"></i></span>
        <%= f.text_field :phone_number, class: "form-control"%>
      </div>  
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_email, class: "col-md-2 text-center" %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon2">@</span>
        <%= f.text_field :contact_email, class: "form-control"%>
      </div>  
    </div>
  </div>  <div class="form-group">
    <%= f.label :description, class: "col-md-2 text-center", style: "white-space: pre-wrap;" %>
    <div class="col-md-10">
      <%= f.text_area :description, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">  
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Update Profile", class: "btn btn-primary" %>
      <span></span>
      <%= f.submit "Cancel", class: "btn btn-default", type: "reset" %>
    </div>  
  </div>
<% end %>